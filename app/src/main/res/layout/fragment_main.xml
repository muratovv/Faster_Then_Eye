<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity$PlaceholderFragment"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leftTextView"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:minLines="1"
        android:maxLines="1"
        android:maxLength="4"
        android:width="100dp"
        android:text="Ос"
        android:gravity="bottom|right"
        android:textSize="36dp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pivotTextView"
        android:layout_alignBottom="@+id/leftTextView"
        android:layout_toRightOf="@+id/leftTextView"
        android:text="о"
        android:textSize="36dp"
        android:textColor="#ffff3e31"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rightTextView"
        android:layout_alignBottom="@+id/pivotTextView"
        android:layout_toRightOf="@+id/pivotTextView"
        android:layout_toEndOf="@+id/pivotTextView"
        android:text="бенности"
        android:textSize="36dp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nextTextView"
        android:textSize="36dp"
        android:text="восп"
        android:layout_alignBottom="@+id/rightTextView"
        android:layout_toRightOf="@+id/rightTextView"
        android:layout_toEndOf="@+id/rightTextView"
        android:maxLines="1"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/leftTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:progress="50"/>
</RelativeLayout>
